<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Capacity_Rule</fullName>
    <active>true</active>
    <description>capacity should be greater than 1</description>
    <errorConditionFormula>AND(
   ISBLANK(Capacity__c) = FALSE,
   Capacity__c &lt;= 1
)</errorConditionFormula>
    <errorDisplayField>Capacity__c</errorDisplayField>
    <errorMessage>Capacity should be more than 1</errorMessage>
</ValidationRule>
